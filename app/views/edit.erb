<form method='POST' action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Recipe Name: <input type="text" name="name" id="name" value="<%= @recipe.name %>"><br>
  Ingredients: <input type="text" name="ingredients" id="ingredients" value="<%= @recipe.ingredients %>"><br>
  Cook Time: <input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>"><br>
  <button type="submit" value="submit">Submit</button>
</form>
